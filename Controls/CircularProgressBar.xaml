<UserControl x:Class="Controls.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid Height="{Binding RelativeSource={RelativeSource Self},Path=Width}" Name="gridlayout">
        <Ellipse Width="{Binding ElementName=gridlayout,Path = Width}"
                 Height="{Binding ElementName=gridlayout,Path=Height}"
                 StrokeThickness="6"
                 Stroke="#EEE"/>
        <Path Name="Arcpath" StrokeThickness="4" Stroke="Orange" 
              StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        <Viewbox Margin="20">
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Run Text="{Binding Value,RelativeSource={RelativeSource AncestorType=UserControl,Mode=FindAncestor}}" FontSize="20"/>
                <Run Text="%"/>
            </TextBlock>
        </Viewbox>
    </Grid>
</UserControl>
